.list_tit {
     display: block; 
    line-height: 40px;
    height: 40px;
    padding-left: 15px;
    font-size: 28rpx;
    color: #999;
   
}
.list_con {
     margin-bottom:20rpx; 
     width:200rpx;
    height: 80rpx;
    line-height: 80rpx; 
    font-size: 28rpx;
     text-align: center;
    background-color:#fff;
    border: 1px solid #DDDDDD;
    border-radius: 8px; 
    color:#999;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
}
.list_con::before {
    content: " ";
    height: 1px;
    position: absolute; 
    width: 100%;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
}
.list_con::before:nth-child(1) {
    border: none;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
}
